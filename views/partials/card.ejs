<div class="card blog-card h-100 border-0 rounded-4 overflow-hidden hover-lift">
  <div class="position-relative">
    <img
      src="<%= blog.coverImageUrl %>"
      class="card-img-top"
      alt="<%= blog.title %>"
      style="height: 200px; object-fit: cover"
    />
    <div
      class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-0 hover-overlay transition-all"
    ></div>
  </div>
  <div class="card-body d-flex flex-column">
    <h5 class="card-title fw-bold mb-2 line-clamp-2"><%= blog.title %></h5>
    <p class="card-text text-muted mb-3 line-clamp-3">
      <%= blog.body.slice(0, 120) %>...
    </p>

    <div class="d-flex align-items-center mb-4">
      <img
        src="<%= blog.createdBy.profileImageUrl %>"
        alt="<%= blog.createdBy.fullName %>"
        class="rounded-circle me-2"
        style="
          width: 36px;
          height: 36px;
          object-fit: cover;
          border: 2px solid #fff;
        "
      />
      <small class="text-dark fw-semibold"
        ><%= blog.createdBy.fullName %></small
      >
    </div>

    <div class="text-end mt-auto">
      <a
        href="/blog/<%= blog._id %>"
        class="btn btn-gradient rounded-pill px-4 py-2 fw-semibold small"
      >
        <i class="bi bi-arrow-right-circle me-1"></i>Read More
      </a>
    </div>
  </div>
</div>

<style>
  .blog-card {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.12);
  }

  .card-title {
    color: #2d3748;
    font-size: 1.25rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
  }

  .hover-lift {
    transition: all 0.3s ease;
  }

  .hover-lift:hover {
    transform: translateY(-5px);
  }

  .hover-overlay {
    transition: opacity 0.3s ease;
  }

  .card:hover .hover-overlay {
    opacity: 0.1;
  }

  .line-clamp-2 {
    line-height: 1.5rem;
    max-height: 3rem; /* fallback for 2 lines */
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .transition-all {
    transition: all 0.3s ease;
  }
  .blog-card {
    border: 2px solid transparent;
    background-clip: padding-box;
    border-radius: 24px;
    position: relative;
  }

  .blog-card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px;
    background: var(--primary-gradient);

    /* WebKit (Safari, older Chrome) */
    -webkit-mask: linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;

    /* Standard syntax for mask and mask-composite */
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;

    pointer-events: none;
  }

  .btn-gradient {
    background: var(--primary-gradient);
    color: white;
    border: none;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
  }

  .btn-gradient:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.35);
  }
</style>
